          <th style="white-space:nowrap;"><a href="<%= location_year_month_path(@location, @year, 3)%>">03</a></th>
          <th style="white-space:nowrap;"><a href="<%= location_year_month_path(@location, @year, 4)%>">04</a></th>
          <th style="white-space:nowrap;"><a href="<%= location_year_month_path(@location, @year, 5)%>">05</a></th>
          <th style="white-space:nowrap;"><a href="<%= location_year_month_path(@location, @year, 6)%>">06</a></th>
          <th style="white-space:nowrap;"><a href="<%= location_year_month_path(@location, @year, 7)%>">07</a></th>
          <th style="white-space:nowrap;"><a href="<%= location_year_month_path(@location, @year, 8)%>">08</a></th>
          <th style="white-space:nowrap;"><a href="<%= location_year_month_path(@location, @year, 9)%>">09</a></th>
